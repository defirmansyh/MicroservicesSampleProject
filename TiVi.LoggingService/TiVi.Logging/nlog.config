<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" autoReload="true" internalLogLevel="Error" internalLogFile="C:/TiViLog/innerLOG_log.txt">
	<extensions>
		<add assembly="NLog.Extended" />
	</extensions>

	<targets>
		<!--<target name="logfile" xsi:type="File" fileName="D:/RND/esta-k2-rest-helper/Logs/Services/${shortdate}_log.txt" layout="${longdate} ${level:uppercase=true} ${message}"/>-->
		<target name="logfile" xsi:type="File" fileName="C:/TiViLog/${shortdate}_log.txt" layout="${longdate} ${level:uppercase=true} ${message}"/>
	</targets>

	<rules>
		<!--<logger name="*" minlevel="Debug" writeTo="logfile" />-->
		<logger name="*" minlevel="Error" writeTo="logfile" />
		<logger name="*" minlevel="Info" writeTo="logfile" />
		<!--<logger name="*" minlevel="Warning" writeTo="logfile" />-->
	</rules>
</nlog>
